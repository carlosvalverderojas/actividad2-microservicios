# ====== BUILD (compila el jar dentro del contenedor) ======
FROM maven:3.9.9-eclipse-temurin-17 AS build
WORKDIR /app

# Copiamos wrapper y pom primero (mejor cache)
COPY mvnw mvnw
COPY mvnw.cmd mvnw.cmd
COPY .mvn .mvn
COPY pom.xml pom.xml

# IMPORTANTE: dar permiso de ejecuci칩n al wrapper (Render/Linux)
RUN chmod +x mvnw

# Descarga dependencias (cache)
RUN ./mvnw -DskipTests dependency:go-offline

# Copiamos el c칩digo y compilamos
COPY src src
RUN ./mvnw -DskipTests package

# ====== RUNTIME ======
FROM eclipse-temurin:17-jre-alpine
WORKDIR /app

COPY --from=build /app/target/*.jar app.jar

# Render usa PORT din치mico. Local seguir치 usando 8081 si no hay PORT.
ENV PORT=8081
EXPOSE 8081

ENTRYPOINT ["sh","-c","java -jar app.jar --server.port=${PORT}"]
